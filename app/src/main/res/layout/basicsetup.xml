<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightblue"
   >


    <EditText
        android:id="@+id/dosageAmount"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/medicineName"
        android:layout_marginTop="39dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:backgroundTint="@color/colorYellow"
        android:textStyle="italic"
        android:textSize="25dp"
        android:hint="Dosage Amount" />

    <EditText
        android:id="@+id/medicineName"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:backgroundTint="@color/colorYellow"
        android:textStyle="italic"
        android:textSize="25dp"
        android:hint="Medicine Name" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/startTime"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_shape"
        android:onClick="Save"
        android:text="Save"
        android:textColor="#F7FF1C" />

    <Button
        android:id="@+id/btnVerifyInput"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnClear"
        android:background="@drawable/button_shape"
        android:text="Add Phone"
        android:textColor="#F7FF1C" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btnSave"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:onClick="clear"
        android:text="Clear"
        android:textColor="#F7FF1C" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/btnSave"
        android:layout_below="@+id/btnSave"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="97dp"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </TableRow>

    </TableLayout>

    <EditText
        android:id="@+id/startDate"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:textStyle="italic"
        android:textSize="25dp"
        android:backgroundTint="@color/colorYellow"
        android:background="@drawable/edit_text_border"
        android:hint="Pick Start Date" />


    <Button
        android:id="@+id/btn_start_date"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/startDate"
        android:layout_alignBottom="@+id/startDate"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape"
        android:textColor="#F7FF1C"
        android:text="Select" />

    <EditText
        android:id="@+id/startTime"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/startDate"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:backgroundTint="@color/colorYellow"
        android:textStyle="italic"
        android:textSize="25dp"
        android:background="@drawable/edit_text_border"
        android:hint="Pick Start Time" />

    <Button
        android:id="@+id/btn_start_time"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/btn_start_date"
        android:layout_alignTop="@+id/startTime"
        android:background="@drawable/button_shape"
        android:textColor="#F7FF1C"
        android:text="Select" />

</RelativeLayout>






